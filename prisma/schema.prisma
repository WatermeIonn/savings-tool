generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  DELETED
}

model Goal {
  id            String     @id @default(uuid())
  name          String
  price         Decimal
  saved         Decimal    @default(0)
  priority      Int        @default(1) // 1=Low, 2=Medium, 3=High, 4=Highest
  status        GoalStatus @default(ACTIVE)
  dateAdded     DateTime   @default(now())
  dateCompleted DateTime?
}

model Saving {
  id     String   @id @default(uuid())
  amount Decimal
  date   DateTime @default(now())
  event  String?
}
