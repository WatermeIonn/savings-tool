// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Goal {
  id     String  @id @default(uuid())
  name   String
  price  Int
  saved  Int     @default(0)
  saving Saving?
}

model Saving {
  id     String  @id @default(uuid())
  amount Int
  goal   Goal?   @relation(fields: [goalId], references: [id])
  goalId String? @unique
}
